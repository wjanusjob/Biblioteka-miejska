extend base.pug
block content
     script(src="/scripts/edit.js")
     script(src="/scripts/addgenre.js")
     style 
         include styles/infobook.css
     div(id="bookup")
        div(id="bookcover")
            img(src='/img/'+ bookdata.zdjecie_adres class="bookimg")
        div(id="bookinfo")
            div(id="info")
                table
                    tr
                        td id
                        td(id = "idbook")=bookdata.idKsiążka
                    tr
                        td Autor: 
                        td 
                            input(type="text" value=bookdata.autor id="inautor")
                    tr
                        td Tytuł: 
                        td
                            input(type="text" value=bookdata.tytuł id="intytuł")
                    tr(id="gatunkitr")
                        td Gatunki: 
                         each val in genres
                            td
                                select(class = "editgenres" id="genre" + val.nazwa)
                                    option=val.nazwa
                                    each genre in selectGatunek
                                        option=genre
                        
                        td  
                            button(type="button" id="addgenre") dodaj
                    tr
                        td Wydanie: 
                        td
                            input(type="text" value=bookdata.wydanie id="inwydanie")
                    tr
                        td Data Wydania: 
                        td
                            input(type="text" value=bookdata.data_wydania id="indata")
                    tr
                        td Miejsce Wydania: 
                        td
                            input(type="text" value=bookdata.miejsce_wydania id="inmiejsce")
                    tr
                        td ilość stron: 
                        td
                            input(type="text" value=bookdata.ilość_stron id="instrony")
                    tr
                        td Strony nienumerowane: 
                        td
                            input(type="text" value=bookdata.strony_nienumerowane id="inienumerowane")
                    tr
                        td Wymiary: 
                        td
                            input(type="text" value=bookdata.Wymiary id="inwymiary")
                    tr
                        td ISBN: 
                        td
                            input(type="text" value=bookdata.ISBN id="inisbn")
                    tr
                        td    
                            button(type="button" id="editbutt") edytuj
                        td
                            button(type="button" id="addcopy") dodaj egzemplarz
            div(id="buttons")
                div(class="bookbutt") opis
        div(id="copies")
            table
                tr(class="copiesrows") 
                    td numer egzemplarza  
                    td dostępność
                each copy in copies
                    tr(class="copiesrows")
                        td(class="copyname")=copy.idEgzemplarz
                        td
                            if copy.dostępność ==1
                                img.availability(src="/img/ok.png" name="ok" id=copy.idEgzemplarz)
                            else
                                img.availability(src="/img/notok.png" name="notok" id=idEgzemplarz)
                        //- td(class="availability")=(copy.dostępność==1?img(class="bookimg" src="/img/czas_zniw.jpg") :'niedostępne')
     div(id="bookdown")
     input(type="text" value=bookdata.opis id="inopis")